---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://astro.build",
    description: "Built with Astro",
    icon: "mdi:code-braces",
  },
  {
    url: "https://github.com/nibblesnbits",
    description: "Built with ❤️ by nibblesnbits",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://stripe.com",
    description: "Payments by Stripe",
    icon: "fa-brands:stripe-s",
  }
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-3">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full text-xl" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
