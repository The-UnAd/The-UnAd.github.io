---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import { t } from "astro-i18n";
---

<ContentSection title={t('features.title')} id="features">
  <Fragment slot="lead">
    {t('features.lead.0')}<span class="text-primary">{t('features.lead.1')}</span>{t('features.lead.2')}
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      [...new Array(6).keys()].map((i) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={t(`features.items.${i}.icon`)} class="text-2xl"/>
          </div>
          <p class="text-center font-extrabold text-xl">{t(`features.items.${i}.title`)}</p>
          <p class="text-center text-offset text-sm">{t(`features.items.${i}.description`)}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
